<script>
$(document).ready(function() {
    $('.datatable-init thead tr th:nth-Child(2)').click();
    $('.datatable-init thead tr th:nth-Child(2)').click();
    var commission = '';
    var accountType = "{{accountType}}";
    switch(accountType) {
        case '14 Day Trial': commission = '0%'; break;
        case 'Apollo': commission = '0%'; break;
        case 'Thor': commission = '15%'; break;
        case 'Odin': commission = '15%'; break;
        case 'Zeus': commission = '10%'; break;
    }
    $('#commission').html(commission);

});

function getTradeHistory(id) {
    $.ajax({
        url : "/getModalTradeHistory",
        type: 'POST',
        data: {'id':id},
        success:function(data)
        {
            if(data){ 
                $('#modalTradeHistory .modal-body').html(data); 
            }
        }
    });
}
</script>
